

<div class="page-wrapper">


<div class=" todo-intro">



<div class="list-holder">

<% if @listall.any? %>

<div class="form-button center-text">
<%= link_to("Create New TODO", new_list_path, :class => "btn btn-outline-warning") %>
</div>

<% @listall.each do |list| %>
  <%= render "list", list: list %>
<% end %>

<% else %>

<h2>Let's start by creating a new todo list!</h2>

<div class="form-button center-text">
<%= link_to("Create New TODO", new_list_path, :class => "btn btn-outline-warning") %>
</div>

<% end %>





</div>
</div>

</div>




