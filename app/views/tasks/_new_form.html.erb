<div class="container col-md-12">

  <div class="row">


    <div class="form-new-task">


      <div id="form-prep" class="form-input">
        <%= form_with(model: [@list, @list.tasks.build], remote: true) do |f| %>
          <%= f.text_field(:title, :id => "item", :placeholder => "Enter an activity..", :class => "form-control") %>
          </div>

          <div class="form-buttons">
            <%= button_tag(:id => "add", :class => "btn btn-outline-warning") do %>
              <% icon('fas', 'plus') %>
            <% end %>

          </div>
        <% end %>

        </div>



  </div>
</div>