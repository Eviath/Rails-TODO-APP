


$("#<%= @task.id %>").fadeOut(500, function() {
  $(this).remove();
});
$('.list--show-header').find( 'span.badge' ).addClass('animation-ring').delay(500).queue(function(){
    $(this).removeClass('animation-ring').dequeue(); 
  });


 $completedCount = $("#completed-count-parent"),
 $todoCount = $("#todo-count-parent"),
 $taskCount = $("#task-count-parent"),

<% if @list.tasks.length == 0 %>
$taskCount.fadeOut()
<% else %>
$taskCount.html('<%= @list.tasks.length %>');
<% end %>


<% if @todo.length == 0 %>
$todoCount.fadeOut()
<% else %>
$todoCount.html('<%= @todo.length %>');
<% end %>


<% if @completed_tasks.length == 0 %>
$completedCount.fadeOut()
<% else %>
$completedCount.html('<%= @completed_tasks.length %>');
<% end %>
