


$("#<%= @task.id %>").remove();

$("#task-count-parent").html('<%= @list.tasks.length %>');

<% if @task.completed %>
$("#completed").prepend( $(" <%= j render 'tasks/task', task: @task %>").hide().fadeIn(1100) );


$("#todo-count-parent").html('<%= @todo.length %>');
$("#completed-count-parent").html('<%= @completed_tasks.length %>');


<% else %>
$("#todo").prepend( $(" <%= j render 'tasks/task', task: @task %>").hide().fadeIn(1100) );
       

$("#todo-count-parent").html('<%= @todo.length %>');
$("#completed-count-parent").html('<%= @completed_tasks.length %>');



<% end %>

$('[data-toggle="tooltip"]').tooltip();